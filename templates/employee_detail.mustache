<div class="container">

    <h1>Detail zaměstnance {{name}} {{surname}}</h1>
    <dl>
        {{#employee}}
            <dt>Jméno</dt>
            <dd>{{name}}</dd>

            <dt>Příjmení</dt>
            <dd>{{surname}}</dd>

            <dt>Místnost</dt>
            <dd>{{room_name}}</dd>

            <dt>Pozice</dt>
            <dd>{{job}}</dd>

            <dt>Mzda</dt>
            <dd>{{wage}}</dd>

            <dt>Klíče</dt>
            {{#employee_keys}}
                <a href='/room/detail.php?room_id={{room_id}}'>{{keys}}</a> <br>
            {{/employee_keys}}
        {{/employee}}
    </dl>

</div>

